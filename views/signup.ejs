<body>
    <%- include('menu.html') %>
    <form action="/signup" method="post">
        <h1>회원가입</h1>
        <div class="mb-3">
            <label for="floatingInput">ID</label>
            <input name="userid" type="text" class="form-control" id="floatingInput" style="font-size: 25px;">
        </div>
        <div class="mb-3">
