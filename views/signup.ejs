            <input name="userpwd" type="password" class="form-control" id="floatingPassword" style="font-size: 25px;">
        </div>
        <div class="mb-3">
            <label for="floatingPassword">닉네임</label>
            <input name="username" type="text" class="form-control" id="floatingPassword" style="font-size: 25px;">
        </div>
        <div id="Btns">
            <button id="signupBtn" type="submit" class="btn btn-warning">완료</button>
            <button type="button" onclick="location.href='/login'" class="btn btn-secondary">로그인 페이지로 이동</button>
