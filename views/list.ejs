<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SimpleBoard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-color: rgb(227, 227, 227);
            display: flex;
            flex-direction: column;
            min-height: 99vh;
        }

        #contentBox {
            flex: 20;
        }
        
        .table {
            width: 75%;
            font-size: 30px;
            background-color: white;
            margin-top: 40px;
            margin: auto;
            table-layout: auto;
        }

        .delete {
            font-size: 20px;
        }

        #dashboard {
            display: flex;
            margin: 20px auto;
            justify-content: center;
        }

        #dashboard button {
            margin-right: 10px;
            font-size: 25px;
        }

        #searchBox input, #searchBox button {
            font-size: 25px;
        }

        #pageBtns {
            flex: 1;
            display: flex;
            justify-content: center;
            margin-bottom: 40px;
            margin-top: 30px;
        }

        @media (max-width: 768px) {
            .table {
                width: 100%;
                font-size: 20px; 
            }

            .postDate {
                font-size: 15px;
            }

            .delete {
                font-size: 18px;
            }

            #dashboard {
                flex-direction: column; 
                margin: 5px auto;
            }

            #writeBtn {
                display: none;
            }

            #dashboard button {
                margin: auto;
                width: 98%;
                margin-bottom: 10px; 
                font-size: 20px; 
            }

            #searchBox {
                width: 100%;
            }

            #searchBox input {
                flex: 7;
            }

            #searchBox button {
                flex: 3;
            }

            #searchBox input, #searchBox button {
                font-size: 20px; 
                height: 45px;
            }
        }


    </style>
</head>
<body>
    <%- include('menu.html') %>

    <% if (user) { %>

    <div id="contentBox">
        <div id="dashboard">
            <button id="writeBtn" onclick="location.href='/write'" class="btn btn-primary">글쓰기</button>
            <button id="myContentBtn" class="myContent btn" style="background-color: #20c997; color: white;">내글보기</button>
            <form id="searchBox" class="d-flex" role="search">
                <input class="form-control me-2 searchBar" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success searchBtn" type="submit">enter</button>
            </form>
        </div>

        <table class="table p-3 table-hover"> 
            <thead>
                <tr>
                    <th style="width: 45%; padding-left: 20px;">제목</th>
                    <th style="width: 20%; text-align: center;">작성자</th>
                    <th style="width: 20%; text-align: center;">작성일</th>
                </tr>
            </thead>
            <% if (data.length > 0) { %>
                <tbody>
                    <tr onclick="location.href='/content/<%= data[0]._id %>'" style="cursor: pointer;">
                        <td style="padding-left: 20px;">
                            <span style="color: #0d6efd;"><%= data[0].title %>
                                <span style="color: gray; font-size: 20px;"> [<%= data[0].comment? data[0].comment.length : 0 %>]
                                    <span id="isNew"></span>
                                </span>
                            </span>
                        </td>                   
                        
                        <% if (data[0].author == '(탈퇴한회원)') { %>
                            <td style="font-size: 28px; text-align: center; color: gray;"><%= data[0].author %></td>
                        <% } else { %>
                            <td style="text-align: center;"><%= data[0].author %></td>
                        <% } %>
                        <td class="postDate" style=" text-align: center;"><%= data[0].date %></td>    
                    </tr>

                    <% for (let i=1; i < data.length; i++){ %>
                        <tr onclick="location.href='/content/<%= data[i]._id %>'" style="cursor: pointer;">
                            <td style="padding-left: 20px;">
                                <span style="color: #0d6efd;"><%= data[i].title %>
                                    <span style="color: gray; font-size: 20px;"> [<%= data[i].comment? data[i].comment.length : 0 %>]
                                    </span>
                                </span>
                            </td>                   
                            
                            <% if (data[i].author == '(탈퇴한회원)') { %>
                                <td style="font-size: 28px; text-align: center; color: gray;"><%= data[i].author %></td>
                            <% } else { %>
                                <td style=" text-align: center;"><%= data[i].author %></td>
                            <% } %>
                            <td class="postDate" style=" text-align: center;"><%= data[i].date %></td>    
                        </tr>
                    <% } %>
                </tbody>
            <% } %>
        </table>
    </div>

    <nav id="pageBtns" class="mb-3" aria-label="Page navigation example">
        <ul class="pagination">
      
          <!-- 이전 버튼 -->
          <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
            <a class="page-link" href="<%= currentPage > 1 ? '/list?page=' + (currentPage - 1) : '#' %>" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
      
          <!-- 동적으로 표시할 페이지 번호 -->
          <% 
            let startPage = Math.max(1, currentPage - 2);
            let endPage = Math.min(totalPages, currentPage + 2);

            if (currentPage <= 3) {
              startPage = 1;
              endPage = Math.min(5, totalPages);
            }
            
            if (currentPage > totalPages - 3) {
              startPage = Math.max(1, totalPages - 4);
              endPage = totalPages;
            }
          %>

          <% for(let i = startPage; i <= endPage; i++) { %>
            
            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
              <a class="page-link" href="/list?page=<%= i %>"><%= i %></a>
            </li>
          <% } %>
          
          <!-- 다음 버튼 -->
          <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
            <a class="page-link" href="<%= currentPage < totalPages ? '/list?page=' + (currentPage + 1) : '#' %>" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
          
        </ul>
      </nav>
      
      
    
    <% } else { %>
        <%- include('welcome-box.ejs') %>
    <% } %>
        
    
    </div>

    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
    <script>
        $('.searchBtn').click((e) => {
            e.preventDefault();
            let inputValue = $('.searchBar').val();
            location.href = '/search?value=' + inputValue;
        })

        $('.myContent').click((e) => {
            location.href = '/myContent';
        })

        const urlParams = new URLSearchParams(window.location.search);
        const isNew = urlParams.get('isNew');

        if (isNew == 'true') {
            document.getElementById('isNew').innerText = 'new!';
        }

        
        
    </script>
</body>
</html>