<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SimpleBoard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        
        table {
            font-size: 30px;
            margin: 30px auto;
            border: 2px solid;
        }

        .delete {
            font-size: 20px;
        }

        #dashboard {
            display: flex;
            margin: 20px auto;
            justify-content: center;
        }

        #dashboard button {
            margin-right: 10px;
            font-size: 25px;
        }

        #searchBox input, #searchBox button {
            font-size: 25px;
        }

    </style>
</head>
<body>
    <%- include('menu.html') %>

    <div id="dashboard">
        <button onclick="location.href='/enter'" class="btn btn-warning">글쓰기</button>
        <button class="myContent btn btn-success">내글보기</button>
        <button onclick="location.href='/list'" class="btn btn btn-secondary">전체 목록</button>
        <form id="searchBox" class="d-flex" role="search">
            <input class="form-control me-2 searchBar" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success searchBtn" type="submit">enter</button>
        </form>
    </div>

    <table class="table w-75 p-3">
        <thead>
            <tr>
                <th style="width: 45%; padding-left: 20px;">제목</th>
                <th style="width: 20%; text-align: center;">작성자</th>
                <th style="width: 20%; text-align: center;">작성일</th>
                <th style="width: 15%; text-align: center;">삭제</th>
            </tr>
        </thead>
        <tbody>
            <% for (let i=0; i < data.length; i++){ %>
                <tr>
                    <td style="padding-left: 20px;"><a href="/content/<%= data[i]._id %>"><%= data[i].title %></a></td>                   
                    <td style=" text-align: center;"><%= data[i].author %></td>
                    <td style=" text-align: center;"><%= data[i].date %></td>
                    <td style="text-align: center;">
                        <% if (user && user.userid == data[i].author) { %>
                            <button class="delete btn btn-warning" data-id="<%= data[i]._id %>">삭제</button>
                        <% } %>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>

        
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
    <script>
        $('.delete').click((e) => {
            let sid = e.target.dataset.id;
            let item = $(e.target);
            $.ajax({
            type: 'post',
            url: '/delete',
            data: {_id : sid}
        }).done((result) => {
            item.closest('tr').remove();
        }).fail((xhr, textStatus, errorThrown) => {
            console.log('게시물 삭제 실패');
            console.log(xhr, textStatus, errorThrown);
        });
        });

        $('.searchBtn').click((e) => {
            e.preventDefault();
            let inputValue = $('.searchBar').val();
            location.href = '/search?value=' + inputValue;
        })

        $('.myContent').click((e) => {
            location.href = '/myContent';
        })
        
    </script>
</body>
</html>