<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SimpleBoard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>

        #contentBox{
            width: 75%;
            margin: 30px auto;
            border: 2px solid rgb(179, 179, 179);
        }

        #contentBox h2 {
            font-size: 35px;
            padding: 15px 15px 15px 5px;
        }

        #contentBox div {
            font-size: 25px;
        }

        #content {
            padding: 15px;
            height: 58vh;
            white-space:pre;
            max-height: 60vh;
            overflow-y: auto;
        }

        #cardFooter {
            padding: 15px;
        }

        #savedDate {
            padding-bottom: 10px;
        }

        #editBtn {
            font-size: 20px;
        }

        #deleteBtn{
            font-size: 20px;
        }

        #backBtn {
            font-size: 20px;
        }

        #commentTitle {
            width: 75%;
            margin: auto;
        }

        #commentTitle h3 {
            margin-left: 10px;
            margin-bottom: 30px;
        }

        #messageBox {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            position: relative;
        }

        #messageBox button {
            position: absolute;
            bottom: 1px;
            right: 1px;
        }

    </style>
</head>
<body>
    <%- include('menu.html') %>

    <% if (user) { %>

        <div class="card " id="contentBox">
            <div class="card-header">
                <h2><%= data.title %></h2>
                <h5>작성자 : <%= data.author %></h5>
            </div>
            <div class="card-body" id="content"><%= data.content %></div>
            <div class="card-footer" id="cardFooter">
                <div id="savedDate">작성일: <%= data.date %></div>
                <% if (user.userid == data.author) { %>
                    <button id="editBtn" type="button" class="btn" style="background-color: #20c997; color: white;" onclick="location.href='/edit/<%= data._id %>'" >수정하기</button>
                    <button id="deleteBtn" type="button" class="delete btn" style="background-color: #ff3549; color: white;" data-id="<%= data._id %>">삭제</button> 
                <% } %>
                <button id="backBtn" type="button" onclick="window.history.back()" class="btn" style="background-color: #96a1ad; color: white;">목록으로 이동</button>
            </div>
        </div>

        <div id="commentTitle">
            <h3>댓글(<%= data.comment? data.comment.length : 0 %>)</h3>
        </div>

        <% if (data.comment) { %>
            <% for (let i=0; i < data.comment.length; i++){ %>
            <div id="coments">
                <div class="card w-75" style="margin: auto; font-size: 25px; margin-bottom: 20px;">
                    <div class="card-body">
                        <h5 style="margin-bottom: 15px;">작성자 : <%= data.comment[i].userid %></h5>
                        <div id="messageBox">
                            <p style="white-space: pre-wrap; margin-bottom: 5px;"><%= data.comment[i].message %></p>
                            <% if (data.comment[i].userid == user.userid) { %>
                                <button class="deleteComment btn" data-id="<%= data.comment[i]._id %>" data-post="<%= data._id %>" style="font-size: 20px; background-color: #20c997; color: white;">삭제</button>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        <% } %>

        <form action="/comment" method="post" class="mb-3" style="width: 75%; margin: auto;">
            <input style="display: none;" name="postId" value="<%= data._id %>" />
            <input style="display: none;" name="userid" value="<%= user.userid %>" />
            <label for="exampleFormControlTextarea1" class="form-label" style="font-size: 25px;"><%= user.userid %></label>
            <textarea name="commentMessage" rows="3" cols="20" wrap="hard" class="form-control" style="font-size: 25px;"></textarea>
            <button type="submit" class="btn btn-primary" style="margin-top: 10px; font-size: 20px;">저장</button>
        </form>



    <% } else { %>
        <%- include('welcome-box.ejs') %>
    <% } %>
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
    <script>
        $('.delete').click((e) => {
            let check = confirm('정말 삭제하시겠습니까?');
            if (check) {
                let sid = e.target.dataset.id;
                let item = $(e.target);
                $.ajax({
                    type: 'post',
                    url: '/delete',
                    data: {_id : sid}
                }).done((result) => {
                    item.closest('tr').remove();
                    alert('삭제가 완료되었습니다.');
                    location.href = '/list';
                }).fail((xhr, textStatus, errorThrown) => {
                    console.log('게시물 삭제 실패');
                    console.log(xhr, textStatus, errorThrown);
                });
            }  
        });

        $('.deleteComment').click((e) => {
            let check = confirm('정말 삭제하시겠습니까?');
            if (check) {
                
                let sid = e.target.dataset.id;
                let post = e.target.dataset.post;
                let item = $(e.target);
                console.log(sid);
                $.ajax({
                    type: 'post',
                    url: '/deleteComment',
                    data: {_id : sid, postId : post}
                }).done((result) => {
                    item.closest('div').remove();
                    window.location.reload();
                }).fail((xhr, textStatus, errorThrown) => {
                    console.log('게시물 삭제 실패');
                    console.log(xhr, textStatus, errorThrown);
                });
            }  
        });
    </script>
</body>
</html>